<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/storeFeedFragment">

    <fragment
        android:id="@+id/storeFeedFragment"
        android:name="com.tps.challenge.features.storefeed.StoreFeedFragment"
        android:label="Feed de Lojas"
        tools:layout="@layout/fragment_store_feed">
        <action
            android:id="@+id/action_storeFeed_to_storeDetails"
            app:destination="@id/storeDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/storeDetailsFragment"
        android:name="com.tps.challenge.features.storedetails.StoreDetailsFragment"
        android:label="Detalhes da Loja"
        tools:layout="@layout/fragment_store_details">
        <argument
            android:name="storeId"
            app:argType="string" />
    </fragment>
</navigation>